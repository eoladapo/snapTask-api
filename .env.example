# Server Configuration
PORT=4545

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster0

# JWT Tokens
ACCESS_TOKEN_SECRET=your-access-token-secret-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
ACCESS_TOKEN_EXPIRES=1h
REFRESH_TOKEN_EXPIRES=7d

# AI Integration (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Phone Number Encryption
PHONE_ENCRYPTION_KEY=your-secure-encryption-key-change-this-in-production

# Twilio WhatsApp Configuration
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# For sandbox testing: whatsapp:+14155238886
# For production: whatsapp:+1234567890 (your approved number)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Notification Settings
MAX_NOTIFICATIONS_PER_DAY=10
NOTIFICATION_RETRY_ATTEMPTS=3

# Cron Job Security (for external cron services like cron-job.org)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your-cron-secret-here
